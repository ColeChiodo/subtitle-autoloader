{
	"manifest_version": 3,
	"name": "Kuraji - 「クラジ」 Automatic Japanese Subtitle Finder",
	"version": "0.1",
	"author": "colechiodo.cc",
	"description": "Automatically searches for and loads Japanese subtitles for your videos.",

	"icons": {
		"16": "assets/icons/cc-icon-white.png",
		"48": "assets/icons/cc-icon-white.png",
		"128": "assets/icons/cc-icon-white.png"
	},

	"permissions": [
		"storage",
		"activeTab",
		"scripting"
	],

	"host_permissions": [
		"<all_urls>"
	],

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content/content.js"]
		}
	],

	"web_accessible_resources": [
		{
			"resources": ["assets/icons/*"],
			"matches": ["<all_urls>"]
		}
	],

	"action": {
		"default_popup": "src/popup/popup.html"
	},

	"options_ui": {
		"page": "src/settings/settings.html",
		"open_in_tab": true
	}
}


